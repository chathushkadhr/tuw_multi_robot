<library path="tuw_multi_robot_rviz">

  <class name="tuw_multi_robot_rviz/VoronoiGraph"
         type="tuw_multi_robot_rviz::VoronoiGraphDisplay"
         base_class_type="rviz_common::Display">
    <description>
      Displays Voronoi Graphs in RVIZ
    </description>
    <message_type>tuw_multi_robot_msgs/msg/Graph</message_type>
  </class>

  <class name="tuw_multi_robot_rviz/VoronoiSegment"
         type="tuw_multi_robot_rviz::VoronoiSegmentDisplay"
         base_class_type="rviz_common::Display">
    <description>
      Displays Voronoi Segments in RVIZ
    </description>
    <message_type>tuw_multi_robot_msgs/msg/Graph</message_type>
  </class>

  <class name="tuw_multi_robot_rviz/MultiRobotInfo"
         type="tuw_multi_robot_rviz::MultiRobotInfoDisplay"
         base_class_type="rviz_common::Display">
    <description>
      Displays Robot Positions in RVIZ
    </description>
    <message_type>tuw_multi_robot_msgs/msg/RobotInfo</message_type>
  </class>
  
  <class name="tuw_multi_robot_rviz/RobotGoalArray"
         type="tuw_multi_robot_rviz::RobotGoalsArrayDisplay"
         base_class_type="rviz_common::Display">
    <description>
      Displays Robot Goals in RVIZ
    </description>
    <message_type>tuw_multi_robot_msgs/msg/RobotGoalsArray</message_type>
  </class>

  <class name="tuw_multi_robot_rviz/GoalSelector"
         type="tuw_multi_robot_rviz::MultiRobotGoalSelector"
         base_class_type="rviz_common::Tool">
    <description>
      Tool for planting flags on the ground plane in rviz.
    </description>
  </class>

</library>
